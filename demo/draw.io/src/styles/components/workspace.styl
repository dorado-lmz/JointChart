@import "flow.styl"
#workspace
    position: absolute;
    margin: 0;
    top:0px;
    left:180px;
    bottom: 0px;
    right: 322px;
    overflow: hidden;
    component-border()

    #designer_header{
      height: 25px;
      & #toolbar{
        padding: 1px 10px;
      }
    }
    .tabs{
      position: absolute;
      top:25px;
      width: 100%;
    }
    #workspace-tabs
         margin-right: 35px;

    #workspace-add-tab
        position: absolute;
        box-sizing: border-box;
        top: 0;
        right: 0;
        height: 35px;
        width: 35px;
        background: #fff;
        border-bottom: 1px solid primary-border-color;

        #btn-workspace-add-tab
            display: inline-block;
            workspace-button()
            line-height: 32px;
            height: 32px;
            width: 32px;
            margin-top: 3px;
            margin-right:3px;
            border: 1px solid primary-border-color;
            text-align: center
     #workspace-format-tab
        position: absolute;
        box-sizing: border-box;
        top: 0;
        right: 40px;
        height: 35px;
        width: 35px;
        background: #fff;
        border-bottom: 1px solid primary-border-color;

        #btn-workspace-format-tab
            display: inline-block;
            workspace-button()
            line-height: 32px;
            height: 32px;
            width: 32px;
            margin-top: 3px;
            margin-right:3px;
            border: 1px solid primary-border-color;
            text-align: center


    #chart
       overflow: auto;
       background: #e3e3e3;
       position: absolute;
       bottom:25px;
       top: 60px;
       left:0px;
       right:0px;
       box-sizing:border-box;
       transition: right 0.2s ease;

    #workspace-footer
        component-footer()
